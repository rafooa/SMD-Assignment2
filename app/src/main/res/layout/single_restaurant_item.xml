<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#03dac6"
    android:theme="@style/Theme.Material3.Light"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/restaurantpic"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:contentDescription="profile logo"
            android:src="@mipmap/ic_restaurant" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/tvRestaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Name"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRestaurantDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Description" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="93dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRestaurantLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Location"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRestaurantContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+92-302-0000000" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>